<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kf.coffeecard.activity.SettingActivity">
    <TextView
        android:text="@string/num_of_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView_name"
        android:layout_alignParentStart="true" />

    <TextView android:text="@string/game_type" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_game_type"
        android:layout_below="@+id/editText_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />


    <TextView
        android:text="@string/num_of_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_num_of_player"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/game_type_spinner"
        android:layout_alignParentLeft="true" />



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_player_spinner"
        android:entries="@array/num_players_list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_num_of_player"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_type_spinner"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_game_type"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認"
        android:id="@+id/setting_ok_button"
        android:layout_below="@+id/num_player_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_below="@+id/textView_name"
        android:text="Kimmy" />




</RelativeLayout>
